{
    //manifest spec: http://developer.chrome.com/extensions/manifest.html
    //required
    "name": "SnippetParse",
    "version": "1.0",
    "manifest_version": 2,

    //recommended
    "description": "Parser Widget for Facebook Messenger",
    "icons": {
        "19": "images/icon_19.png",
        "38": "images/icon_38.png",
        "128": "images/icon_128.png"
    },

    //required
    "browser_action": {
        "default_title": "browser_action: default_title",
        "default_icon": {
            "19": "images/icon_19.png",
            "38": "images/icon_38.png"
        },
        "default_popup": "html/main.html"
    },

    //additional
    "options_page": "html/options.html",
    "homepage_url": "http://yourdomainhere.com/",
    "background": {
        "scripts": [
          "js/jquery-1.9.1.min.js",
          "js/widgetInPage.js"
        ]
    },
    "content_scripts": [
        { "run_at" :"document_end",
        "matches": ["http://*/*"],
        "js": ["js/jquery-1.9.1.min.js"],
        "css":["css/widgetInPage.css"] }
    ]
}